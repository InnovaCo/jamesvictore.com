body
	padding-top 0
	padding-bottom 20px
	color #000
	font-family HelveticaNeue, sans-serif
	background-color #fff
	cursor default

	@media screen and (max-width: 540px)
		padding-top 0
		padding-bottom 0

.main
	margin-left auto
	margin-right auto
	padding 0
	max-width 100%
	min-width 1000px
	font-size 16px
	border-radius 4px
	background-color #fff

	&::selection
		background-color #ffffd0

	@media screen and (max-width: 540px)
		border-radius 0
		box-shadow none

.wrapper--1000
	width 1000px
	margin 0 auto

.wrapper--oveflow-hidden
	overflow hidden
	
.logo
	width 215px
	height 99px
	margin-left 0
	margin-top 20px
	margin-bottom 15px
	background url(../images/logo.png) 0 0 no-repeat

.h1
	margin-left -20px
	margin-right -20px
	margin-bottom 20px
	padding-top: 54px;
	font-family HelveticaNeueLTBold, sans-sefif
	font-size 185px
	line-height: 158px;
	font-weight bold
	text-align left

.h2
	margin-bottom 20px
	font-size 54px
	font-weight bold
	line-height 60px

.h3
	margin-bottom 10px
	padding-left 20px
	padding-right 20px
	font-size 18px
	font-weight bold

	@media screen and (max-width: 540px)
		text-align center

.description
	margin-bottom 40px
	font-size 18px
	text-align center

.mark
	padding 0 4px
	font-weight bold
	text-shadow 1px 1px 1px rgba(255, 255, 255, .5)
	border-radius 4px
	background-color #e8e8e8

	&::selection
		background-color rgba(0, 0, 0, .1)

.image_block
	position relative
	overflow hidden
	margin 0 auto
	text-align center
	min-width 1000px
	max-width 1400px

.image_block__image
	position relative
	margin-left -50%
	margin-right -50%
	vertical-align middle

.image_block__title
	position absolute
	top 0px
	color #fff
	left 50%
	margin-left -500px
	width 1000px

.gradient_block{
    padding-top: 40px;
    padding-bottom: 40px;
}

.gradient_block--pink
	background-linear-gradient(left, #f07673, 0%, #ff83bb, 30%, #fd43a4, 100%)

.gradient_block__title
	color #fff

.gradient_block__link
	display block
	padding-top 16px
	padding-bottom 16px
	font-family HelveticaNeueLTBold, sans-sefif
	font-size 30px
	line-height 30px
	text-transform uppercase
	color #fff
