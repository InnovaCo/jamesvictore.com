// Clear the float on any element.
clearfix()
	&:after
		display table
		clear both
		content ''

// Fix no working `-webkit-text-size-adjust: 100%;` in Android.
fix-text-size-adjust()
	background-image linear-gradient(transparent, transparent)

background-linear-gradient(startPoint, startColor, startInterval, middleColor, middleInterval, endColor, endInterval)
	background-color startColor
	background-image -webkit-linear-gradient(startPoint, startColor startInterval, middleColor middleInterval, endColor endInterval)
	background-image    -moz-linear-gradient(startPoint, startColor startInterval, middleColor middleInterval, endColor endInterval)
	background-image     -ms-linear-gradient(startPoint, startColor startInterval, middleColor middleInterval, endColor endInterval)
	background-image      -o-linear-gradient(startPoint, startColor startInterval, middleColor middleInterval, endColor endInterval)
	background-image         linear-gradient(startPoint, startColor startInterval, middleColor middleInterval, endColor endInterval)