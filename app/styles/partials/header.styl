.menu
	float left
	font-family HelveticaNeue, sans-sefif
	
.menu__button
	position relative
	padding 7px 9px
	height 25px
	display inline-block
	font-size 12px
	text-transform uppercase
	text-decoration none
	color #fff
	background #000
	border none

.menu__button--pink
	padding-right 12px
	padding-left 12px
	background-linear-gradient(to right, #f07673, 0%, #ff83bb, 30%, #fd43a4, 100%)


.menu__button--pink:before
	position absolute
	left 0
	top 0
	opacity 0
	content "Life"
	padding-top 7px
	padding-bottom 7px
	padding-right 12px
	padding-left 12px
	background-linear-gradient(to right, #00BEA3, 0%, #3CD52E, 30%, #FFF36E, 100%)
	-moz-transition all .5s
	-webkit-transition all .5s
	-ms-transition all .5s
	-o-transition all .5s
	transition all .5s
	
.menu__button--pink:hover:before
	opacity 1

.contacts
	float right
	padding-top 3px
	font-family HelveticaNeue, sans-sefif
	
.contacts__link
	margin-left 20px
	font-size 11px
	line-height 20px
	text-transform uppercase
	text-decoration none
	color #000
	border none

	&:hover
		text-decoration underline

	&--contact
		margin-right 20px

	&--social
		margin-left 3px

		&:after
			display inline-block
			content '/'
			margin-left 3px
			margin-right 1px

		&--last:after
			display none